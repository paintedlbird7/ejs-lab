<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= category.charAt(0).toUpperCase() + category.slice(1) %> Menu</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <h1><%= category.charAt(0).toUpperCase() + category.slice(1) %></h1>

  <% menuItems.forEach(item => { %>
    <p><strong><%= item.name %></strong> - $<%= item.price %> - Rating: <%= item.rating %>/5</p>
    <p><%= item.details %></p>
  <% }); %>
</body>
</html>
